{
  "name": "hygen-github-action-generators",
  "version": "0.0.0",
  "description": "Generators for standard github actions workflows",
  "keywords": [
    "hygen",
    "generator",
    "github actions"
  ],
  "type": "module",
  "author": "Bill Beesley <bill.beesley@dazn.com>",
  "homepage": "https://github.com/bbeesley/awesome-generators",
  "license": "MIT",
  "main": "_templates/prompt.ts",
  "files": [
    "_templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/awesome-generators.git"
  },
  "scripts": {
    "test": "ava",
    "pretest": "npm run lint && npm run compile",
    "lint": "eslint .",
    "compile": "echo 'this package does not need to be compiled'"
  },
  "bugs": {
    "url": "https://github.com/bbeesley/awesome-generators/issues"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} ðŸš€ [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
