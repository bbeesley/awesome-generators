{
  "extends": "@beesley/tsconfig/npm.json",
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist/",
  },
  "include": [
    "**/*.ts",
    "**/.*.ts",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/.*.js",
    "**/.*.mjs",
    "**/.*.cjs",
    "*.js",
    "*.mjs",
    "*.cjs",
    ".*.js",
    ".*.mjs",
    ".*.cjs",
    "*.ts",
    ".*.ts"
  ],
  "exclude": ["**/dist/**", "_hygencook/**"]
}
